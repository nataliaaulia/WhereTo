<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrganizationPage"
    android:background="#F0F8FF">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:text="Organization A"
            android:textSize= "28sp"
            android:textColor="#000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"

        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mission"
            android:layout_width="325dp"
            android:layout_height="match_parent"
            android:gravity="left"
            android:orientation="vertical"
            android:text="Mission:"
            android:textSize= "20sp"
            android:textColor="#000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"

        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text1"
            android:layout_width="325dp"
            android:layout_height="match_parent"
            android:gravity="left"
            android:orientation="vertical"
            android:text="Connecting pet lovers to those who need"
            android:textSize= "16sp"
            android:textColor="#999"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"

        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/vision"
            android:layout_width="325dp"
            android:layout_height="match_parent"
            android:gravity="left"
            android:orientation="vertical"
            android:text="Vision:"
            android:textSize= "20sp"
            android:textColor="#000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp"

        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text2"
            android:layout_width="325dp"
            android:layout_height="match_parent"
            android:gravity="left"
            android:orientation="vertical"
            android:text="Creating places where people and pets can live together in a peaceful and safe world."
            android:textSize= "16sp"
            android:textColor="#999"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"

        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/address"
            android:layout_width="325dp"
            android:layout_height="match_parent"
            android:gravity="left"
            android:orientation="vertical"
            android:text="Address:"
            android:textSize= "20sp"
            android:textColor="#000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"

        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text3"
            android:layout_width="325dp"
            android:layout_height="match_parent"
            android:gravity="left"
            android:orientation="vertical"
            android:text="C3755 Bloomington Avenue South | Minneapolis, Minnesota 55407"
            android:textSize= "16sp"
            android:textColor="#999"/>
    </LinearLayout>

    <Button
        android:id="@+id/locateme"
        android:layout_width="181dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="186dp"
        android:background="@drawable/btn_provider_background"
        android:fontFamily="serif"
        android:text="Locate Me"
        android:textColor="#000080"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/donate"
        android:layout_width="181dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="138dp"
        android:background="@drawable/btn_provider_background"
        android:fontFamily="serif"
        android:text="Donate"
        android:textColor="#000080"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/back"
        android:layout_width="181dp"
        android:layout_height="40dp"
        android:layout_below="@+id/donate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-129dp"
        android:background="@drawable/btn_provider_background"
        android:fontFamily="serif"
        android:text="Back"
        android:textColor="#000080"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contactus"
            android:layout_width="325dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:text="Contact Us"
            android:textColor="#000"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/phonemail"
            android:layout_width="325dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:text="612-722-9998"
            android:textColor="#000"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>